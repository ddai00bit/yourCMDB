<group name="locations">
	<object-type name="datacenter">
		<links>
			<link name="Location on GoogleMaps" href="http://www.google.de/maps/place/%street%,%zip% %city%" />
		</links>
		<fields>
			<fieldgroup name="location">
				<field name="street" type="text" />
				<field name="zip" type="text" />
				<field name="city" type="text" summaryfield="true" />
				<field name="country" type="text" summaryfield="true"/>
			</fieldgroup>
			<fieldgroup name="region">
				<field name="region" label="region" type="objectref-region" />
			</fieldgroup>
		</fields>
    </object-type>
	<object-type name="region">
		<fields>
			<fieldgroup name="region">
				<field name="region-name" label="region name" type="text" summaryfield="true" />
				<field name="region-responsibility" label="responsibility" type="text" summaryfield="true" />
			</fieldgroup>
		</fields>
	</object-type>
</group>
